@model List<CustomerFeedBackWebsite.Models.FeedBack>

<h2>All Feedbacks</h2>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Comment</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Customer_ID</td>
            <td>@item.Customer_Name</td>
            <td>@item.Email_Address</td>
            <td>@item.Mobile_No</td>
            <td>@item.Comment</td>
        </tr>
    }
</table>
